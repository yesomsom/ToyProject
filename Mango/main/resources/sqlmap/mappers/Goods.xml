<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="goodsMapper">
	<resultMap type="GoodsVO" id="goodsList">
		<result property="goodsId" column="goods_id" />
		<result property="goodsCategory" column="goods_category" />
		<result property="goodsName" column="goods_name" />
		<result property="sellerName" column="seller_name" />
		<result property="goodsState" column="goods_state" />
		<result property="goodsDetail" column="goods_detail" />
		<result property="goodsPrice" column="goods_price" />
		<result property="goodsStock" column="goods_stock" />
		<result property="deliveryPrice" column="delivery_price" />
		<result property="goodsDiscount" column="goods_discount" />
		<result property="regDate" column="regdate" />
		<result property="gno" column="gno" />
		<result property="id" column="id" />
	</resultMap>
	
	<select id="selectOneGoods" resultMap="goodsList"
		parameterType="GoodsVO">
		SELECT A.*, B.realpath
		FROM goods A, goodsfile B
		WHERE A.goods_id = B.goods_id
		GROUP BY A.goods_id
	</select>
	
	<select id="selectAllGoodsList" resultMap="goodsList"
		parameterType="GoodsVO">
		SELECT A.*, B.realpath
		FROM goods A, goodsfile B
		WHERE A.goods_id = B.goods_id

		limit #{skip}, #{amount}
	</select>

	<select id="selectAllGoodsCount" resultType="Integer"
		parameterType="GoodsVO">
		select count(*) from goods
	</select>

	<select id="selectGoodsDetailList" resultMap="goodsList"
		parameterType="GoodsVO">
		select * from goods where goods_id = #{goodsId}
	</select>

	<insert id="insertGoods" parameterType="GoodsVO">
		insert into goods
		(goods_id, goods_category, goods_name, seller_name,
		goods_state,
		goods_detail, goods_price, goods_stock, delivery_price,
		goods_discount, regdate, id)
		values (#{goodsId}, #{goodsCategory},
		#{goodsName}, #{sellerName}, "승인대기",
		#{goodsDetail}, #{goodsPrice},
		#{goodsStock}, #{deliveryPrice},
		#{goodsDiscount}, SYSDATE(6), #{id})
	</insert>

	<!-- seller별 goodsList 출력 -->
	<select id="selectSellerGoodsList" resultMap="goodsList"
		parameterType="GoodsVO">
		select * from goods where id = #{id} ORDER BY regdate
		DESC
		limit #{skip}, #{amount}
	</select>

	<!-- seller goods count -->
	<select id="selectSellerGoodsCount" resultType="Integer"
		parameterType="GoodsVO">
		select count(*) from goods where id = #{id}
	</select>

	<!-- 상품 삭제 -->
	<delete id="deleteGoods" parameterType="GoodsVO">
		delete from goods where
		goods_id = #{goodsId}
	</delete>

	<!-- 상품 수정 -->
	<update id="modifyGoods" parameterType="GoodsVO">
		UPDATE goods SET
		goods_category=#{goodsCategory},goods_name=#{goodsName},goods_stock=#{goodsStock},goods_detail=#{goodsDetail},goods_price=#{goodsPrice},delivery_price=#{deliveryPrice},goods_discount=#{goodsDiscount}
		WHERE goods_id = #{goodsId};
	</update>

</mapper>